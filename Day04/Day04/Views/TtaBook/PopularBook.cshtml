@model IEnumerable<Day04.Models.Book>
@{
    Layout = null; // Không dùng layout trong partial view
}

@foreach (var Item in Model)
{
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div class="thumbnail">
            <img src="@Url.Content(Item.Image)" alt="Alternate Text" class="img-responsive book-img" />
            <div class="caption">
                <h3>@Item.Title</h3>
                <p>Price: @Item.Price</p>
            </div>
        </div>
    </div>
}
