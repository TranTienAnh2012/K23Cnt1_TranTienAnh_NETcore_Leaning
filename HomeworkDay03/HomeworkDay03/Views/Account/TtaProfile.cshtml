
@{
    ViewData["Title"] = "TtaProfile";
    var account = ViewBag.account;
}

<h2>Your profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@account.Avatar" alt="" style="width:100%" />    
    </div>
    <div class="col-md-8">
        <h2>Full Name: @account.Name </h2>
        <h3>Email: @account.Email</h3>
        <h3>Phone: @account.Address</h3>
        <h3>Bio: @account.Bio</h3>
        <h3> Gender:
            @if(account.Gender == 1)
            {
                <span> Male</span>
            }
            else
            {
                <span>Famale</span>
            }
        </h3>
        <h3>Birthday: @account.Birthday</h3>
        <p>
            <a a asp-controller="Account" asp-action="Index"  class="btn btn-success mt-auto"  >Back to list</a>
        </p>
    </div>
</div>

